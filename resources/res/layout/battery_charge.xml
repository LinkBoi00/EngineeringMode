<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/battery_charge_info_text" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/gm30_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="#777777" android:layout_width="match_parent" android:layout_height="1dp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="40dp">
                <TextView android:id="@+id/disable_gm30_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/disable_gm30" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                <ToggleButton android:id="@+id/gm30_toggle" android:layout_width="100dp" android:layout_height="wrap_content" android:textOn="@string/disabled" android:textOff="@string/enabled" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View android:background="#777777" android:layout_width="match_parent" android:layout_height="1dp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="40dp">
                <TextView android:id="@+id/disable_nafg_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/disable_nafg" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                <ToggleButton android:id="@+id/nafg_toggle" android:layout_width="100dp" android:layout_height="wrap_content" android:textOn="@string/disabled" android:textOff="@string/enabled" android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
