<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <TableLayout android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:stretchColumns="1">
            <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/rf_desense_tx_mode" android:layout_weight="1"/>
                <RadioGroup android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2">
                    <RadioButton android:id="@+id/tone_radio_button" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/rf_desense_tone" android:layout_weight="1"/>
                    <RadioButton android:id="@+id/pusch_radio_button" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/rf_desense_pusch" android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
            <TableRow android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:id="@+id/band" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rf_desense_nr_band"/>
                <Spinner android:id="@+id/band_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawSelectorOnTop="true"/>
            </TableRow>
            <TableRow android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:id="@+id/bandwidth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/rf_desense_bandwidth"/>
                <Spinner android:id="@+id/bandwidth_spinner" android:layout_width="0dp" android:layout_height="wrap_content" android:drawSelectorOnTop="true"/>
            </TableRow>
            <TableRow android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:id="@+id/freq" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/rf_desense_nr_freq"/>
                <EditText android:id="@+id/freq_editor" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="7" android:inputType="number"/>
            </TableRow>
            <TableRow android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:id="@+id/scs_config_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="@string/rf_desense_scs"/>
                <Spinner android:id="@+id/scs_config_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawSelectorOnTop="true"/>
            </TableRow>
            <TableRow android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:id="@+id/vrb_start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/rf_desense_nr_vrb_start"/>
                <EditText android:id="@+id/vrb_start_editor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="3" android:inputType="number"/>
            </TableRow>
            <TableRow android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:id="@+id/vrb_length" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/rf_desense_nr_vrb_length"/>
                <EditText android:id="@+id/vrb_length_editor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="3" android:inputType="number"/>
            </TableRow>
            <TableRow android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:id="@+id/mcs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rf_desense_mcs"/>
                <Spinner android:id="@+id/mcs_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawSelectorOnTop="true"/>
            </TableRow>
            <TableRow android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:id="@+id/power_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rf_desense_nr_power_pusch"/>
                <EditText android:id="@+id/power_editor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="3" android:inputType="numberSigned"/>
            </TableRow>
            <TableRow android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <TextView android:id="@+id/tddSlotConfig" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rf_desense_nr_tddSlotConfig"/>
                <EditText android:id="@+id/tddSlotConfig_editor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="2"/>
            </TableRow>
            <TableRow android:gravity="center_vertical" android:id="@+id/tr_ant_mode" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <CheckBox android:textSize="16sp" android:id="@+id/rf_ant_mode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rf_desense_ant_status_nr"/>
            </TableRow>
            <EditText android:textSize="16sp" android:id="@+id/rf_ant_status_tx" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Tx" android:inputType="number"/>
            <EditText android:textSize="16sp" android:id="@+id/rf_ant_status_rx" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Rx" android:inputType="number"/>
        </TableLayout>
    </ScrollView>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button android:id="@+id/button_set" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rf_desense_button_set"/>
    </LinearLayout>
</LinearLayout>
