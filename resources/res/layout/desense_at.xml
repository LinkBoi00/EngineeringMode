<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:textSize="16sp" android:id="@+id/desense_at_test_items_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/desense_at_test_items" android:layout_weight="1"/>
        <Button android:textSize="16sp" android:id="@+id/desense_at_band_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/desense_at_gnss_band" android:layout_weight="1"/>
    </LinearLayout>
    <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp"/>
    <TextView android:textSize="16sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/desense_at_test_modes" android:layout_marginStart="10dp"/>
    <RadioGroup android:orientation="horizontal" android:id="@+id/desense_at_test_modes_rg" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioButton android:id="@+id/desense_at_test_signal_rb" android:layout_width="0dp" android:layout_height="wrap_content" android:checked="true" android:text="@string/desense_at_test_mode_signal" android:layout_weight="1"/>
        <RadioButton android:id="@+id/desense_at_test_cw_rb" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/desense_at_test_mode_cw" android:layout_weight="1"/>
    </RadioGroup>
    <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/desense_at_start" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/desense_at_start" android:layout_weight="1" android:onClick="onClick"/>
        <Button android:id="@+id/desense_at_stop" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/desense_at_stop" android:layout_weight="1" android:onClick="onClick"/>
    </LinearLayout>
    <include layout="@layout/desense_at_result_format"/>
</LinearLayout>
