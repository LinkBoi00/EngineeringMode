<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/content_iot_apn" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:layout_gravity="center_horizontal" android:id="@+id/detail_title_mdm" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/strMCCMNC"/>
        <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Spinner android:id="@+id/spinnernp1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="30dp" android:drawSelectorOnTop="true" android:prompt="@string/strInputMode" android:layout_weight="3"/>
            <com.mediatek.engineermode.iotconfig.IotConfigEditText android:textSize="20sp" android:id="@+id/input_mccmnc" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:singleLine="true" android:layout_weight="2" android:contentDescription="@string/strMCCMNC"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="10dp">
            <Button android:textSize="20sp" android:id="@+id/btn_confirm" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/strConfirm" android:layout_weight="1"/>
            <Button android:textSize="20sp" android:id="@+id/btn_cancel" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/strCancel" android:layout_weight="1"/>
        </LinearLayout>
        <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp"/>
        <FrameLayout android:id="@+id/detail_frame_apn" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
