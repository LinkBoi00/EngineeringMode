<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/whole_view" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/select_cancel_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" style="@style/Holo.ButtonBar">
        <Button android:id="@+id/select_add" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/select_add" android:layout_weight="1" style="?android:attr/buttonBarButtonStyle"/>
        <Button android:id="@+id/select_cancel" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/select_cancel" android:layout_weight="1" style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
    <View android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignTop="@+id/select_cancel_bar"/>
    <ListView android:id="@+id/list_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/select_cancel_bar"/>
    <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="#ffc0c0c0" android:gravity="center" android:id="@+id/empty_view" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/empty_msg" android:layout_above="@+id/select_cancel_bar"/>
</RelativeLayout>
