<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="5dp"/>
        <TextView android:textSize="16sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="@string/wifi_ch_info" android:layout_marginStart="10dp"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/wifi_format_rx_wf_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/wifi_wf_path"/>
            <CheckBox android:id="@+id/wifi_format_rx_wf0" android:layout_width="0dp" android:layout_height="wrap_content" android:checked="true" android:text="@string/wifi_wf0_text" android:layout_weight="1"/>
            <CheckBox android:id="@+id/wifi_format_rx_wf1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wifi_wf1_text" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/wifi_format_rx_ant_swap_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/wifi_ant_swap"/>
            <RadioGroup android:orientation="horizontal" android:id="@+id/wifi_format_rx_ant_swap_rg" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <RadioButton android:id="@+id/wifi_format_rx_ant_main_rb" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wifi_ant_main" android:layout_weight="1"/>
                <RadioButton android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wifi_ant_aux" android:layout_weight="1"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/wifi_rx0_channel_text"/>
            <Spinner android:id="@+id/wifi_format_rx0_channel_spinner" android:layout_width="200dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/wifi_cbw"/>
            <Spinner android:id="@+id/wifi_format_rx_cbw_spinner" android:layout_width="200dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/wifi_dbw"/>
            <Spinner android:id="@+id/wifi_format_rx_dbw_spinner" android:layout_width="200dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/wifi_bw_advanced_prim_ch"/>
            <Spinner android:entries="@array/wifi_primary_ch_array" android:id="@+id/wifi_format_rx_prim_ch_spinner" android:layout_width="200dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/wifi_preamble"/>
            <Spinner android:id="@+id/wifi_format_rx_preamble_spinner" android:layout_width="200dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="5dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/wifi_format_rx_11ax_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:textSize="16sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="@string/wifi_11ax_field" android:layout_marginStart="10dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
                <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/wifi_11ax_ru_sta_id"/>
                <EditText android:id="@+id/wifi_rx_ru_sta_id_et" android:layout_width="200dp" android:layout_height="wrap_content" android:singleLine="true" android:inputType="number"/>
            </LinearLayout>
            <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="5dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <TextView android:textSize="16sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="@string/wifi_rx_info" android:layout_marginStart="10dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:layout_width="120dp" android:layout_height="25dp" android:text="@string/wifi_fcs_text"/>
            <TextView android:id="@+id/wifi_format_rx_fcs_err_tv" android:layout_width="200dp" android:layout_height="25dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:layout_width="120dp" android:layout_height="25dp" android:text="@string/wifi_rx_text"/>
            <TextView android:id="@+id/wifi_format_rx_ok_tv" android:layout_width="200dp" android:layout_height="25dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:layout_width="120dp" android:layout_height="25dp" android:text="@string/wifi_per_text"/>
            <TextView android:id="@+id/wifi_format_rx_per_tv" android:layout_width="200dp" android:layout_height="25dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:layout_width="120dp" android:layout_height="25dp" android:text="@string/WiFi0_RX_RSSI"/>
            <TextView android:id="@+id/wifi_format_rx0_rssi_tv" android:layout_width="200dp" android:layout_height="25dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:layout_width="120dp" android:layout_height="25dp" android:text="@string/WiFi1_RX_RSSI"/>
            <TextView android:id="@+id/wifi_format_rx1_rssi_tv" android:layout_width="200dp" android:layout_height="25dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <Button android:id="@+id/wifi_format_rx_go_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wifi_go" android:layout_weight="1"/>
            <Button android:id="@+id/wifi_format_rx_stop_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wifi_stop" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
