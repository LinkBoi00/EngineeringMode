<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
        <TextView android:textSize="16sp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/clk_quality_at_input_password_title" android:layout_weight="1"/>
        <EditText android:id="@+id/et_password" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1" android:inputType="textPassword"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
        <Button android:id="@+id/btn_password_cancel" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/clk_quality_at_input_password_cancel" android:layout_weight="1"/>
        <Button android:id="@+id/btn_password_ok" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/clk_quality_at_input_password_ok" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
