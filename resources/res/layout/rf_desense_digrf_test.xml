<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_marginTop="20dp" style="@style/info_layout">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <CheckBox android:id="@+id/rb_digrf_period" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/rf_desense_digrf_period_label" android:layout_weight="2"/>
            <Spinner android:entries="@array/rf_desense_digrf_test_period" android:id="@+id/test_period" android:layout_width="0dp" android:layout_height="wrap_content" android:minWidth="50dp" android:layout_weight="3"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <CheckBox android:id="@+id/rb_digrf_round" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/rf_desense_digrf_round_label" android:layout_weight="2"/>
            <EditText android:id="@+id/test_round" android:layout_width="0dp" android:layout_height="wrap_content" android:minWidth="50dp" android:layout_weight="2" android:inputType="number"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/rf_desense_digrf_round_unit" android:layout_weight="1"/>
        </LinearLayout>
        <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="40dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/button_start" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/rf_desense_button_start" android:layout_weight="1"/>
            <Button android:id="@+id/button_cancel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/rf_desense_button_stop" android:layout_weight="1"/>
        </LinearLayout>
        <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp"/>
        <ProgressBar android:id="@+id/test_progress" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:progress="0" style="@style/Widget.ProgressBar.Horizontal"/>
        <TextView android:id="@+id/test_result_title" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/rf_desense_digrf_test_result"/>
        <TextView android:id="@+id/test_result_overall" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/test_result" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
