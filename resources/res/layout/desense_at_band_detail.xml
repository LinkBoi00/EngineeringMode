<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="15sp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/desense_at_band" android:layout_weight="1"/>
        <TextView android:textSize="15sp" android:id="@+id/bandname" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/channelTv" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/desense_at_channel" android:layout_weight="1"/>
        <EditText android:id="@+id/channelEt" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1" android:inputType="number"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/desense_at_power" android:layout_weight="1"/>
        <EditText android:id="@+id/powerEdit" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:inputType="number" android:layout_marginStart="40dp"/>
    </LinearLayout>
    <Button android:layout_gravity="center_horizontal" android:id="@+id/band_detail_set" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/desense_at_set"/>
</LinearLayout>
