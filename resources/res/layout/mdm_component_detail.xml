<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:id="@+id/menu_mdm" android:layout_width="match_parent" android:layout_height="match_parent">
        <ListView android:id="@+id/ListView_MenuSelect_mdm" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/content_mdm" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/NetworkInfo_PageUp_mdm" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/NetworkInfo_PageUp" android:layout_weight="1"/>
            <Button android:id="@+id/NetworkInfo_PageDown_mdm" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/NetworkInfo_PageDown" android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:layout_gravity="center_horizontal" android:id="@+id/detail_title_mdm" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp"/>
        <FrameLayout android:id="@+id/detail_frame_mdm" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
