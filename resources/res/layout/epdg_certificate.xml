<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout style="@style/info_layout">
        <View android:background="#0000ff" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/cert_used"/>
            <Spinner android:entries="@array/epdg_menu" android:id="@+id/cert_used" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/urlcert"/>
            <Spinner android:entries="@array/epdg_menu" android:id="@+id/urlcert" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/ocsp"/>
            <Spinner android:entries="@array/epdg_menu" android:id="@+id/ocsp" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/nocert"/>
            <Spinner android:entries="@array/epdg_menu" android:id="@+id/nocert" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/debug_skipcert"/>
            <Spinner android:entries="@array/epdg_menu" android:id="@+id/debug_skipcert" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/no_id"/>
            <Spinner android:entries="@array/epdg_menu" android:id="@+id/no_id_check" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <Button android:id="@+id/certificate_set" android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/epdg_set"/>
    </LinearLayout>
</ScrollView>
