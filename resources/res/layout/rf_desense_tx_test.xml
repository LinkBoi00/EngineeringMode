<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout style="@style/info_layout">
        <ListView android:id="@+id/list" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rf_desense_button_duration_time"/>
            <EditText android:id="@+id/test_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="80dp" android:inputType="number"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rf_desense_button_time_count"/>
            <EditText android:id="@+id/test_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="80dp" android:inputType="number"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/check_limit_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rf_desense_button_check_limit"/>
            <EditText android:id="@+id/check_limit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="50dp" android:inputType="number"/>
            <TextView android:id="@+id/readback_interval_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rf_desense_button_readback_interval"/>
            <EditText android:id="@+id/readback_interval" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="50dp" android:inputType="number"/>
        </LinearLayout>
        <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/button_start_total" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/rf_desense_button_start" android:layout_weight="1"/>
            <Button android:id="@+id/button_stop_total" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/rf_desense_button_stop" android:layout_weight="1"/>
            <Button android:id="@+id/button_exit_total" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/rf_desense_button_exit" android:layout_weight="1"/>
        </LinearLayout>
        <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp"/>
        <TextView android:id="@+id/test_result" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
