<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/Audio_DebugInfo_ParameterText" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="40dp" android:text="@string/Audio_DebugInfo_ParameterText"/>
        <Spinner android:id="@+id/Audio_DebugInfo_Spinner" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="20dp"/>
        <TextView android:id="@+id/Audio_DebugInfo_ValueText" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="20dp" android:text="@string/Audio_DebugInfo_ValueText"/>
        <EditText android:id="@+id/Audio_DebugInfo_EditText" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="20dp" android:text="@string/Audio_DebugInfo_EditText" android:singleLine="true" android:numeric="integer"/>
        <Button android:id="@+id/Audio_DebugInfo_Button" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="20dp" android:text="@string/Audio_DebugInfo_Button"/>
    </LinearLayout>
</ScrollView>
