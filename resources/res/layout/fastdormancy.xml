<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:id="@+id/LinearLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="10dp">
            <TextView android:textStyle="bold" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fd_text_screen_on"/>
            <View android:id="@+id/SpacerTop" android:background="#0000ff" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/fd_screen_on_r8fd_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:id="@+id/fd_text_screen_on_r8fd" android:layout_width="100dp" android:layout_height="wrap_content" android:text="@string/fd_text_r8"/>
            <EditText android:id="@+id/fd_edit_screen_on_r8fd" android:layout_width="120dp" android:layout_height="wrap_content" android:digits="0123456789"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:text="@string/fd_text_unit"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/fd_screen_on_legacy_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:id="@+id/fd_text_screen_on_legacy" android:layout_width="100dp" android:layout_height="wrap_content" android:text="@string/fd_text_legacy"/>
            <EditText android:id="@+id/fd_edit_screen_on_legacy" android:layout_width="120dp" android:layout_height="wrap_content" android:digits="0123456789"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:text="@string/fd_text_unit"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/fd_ap_sol_on_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <EditText android:id="@+id/fd_edit_screen_on_ap" android:layout_width="120dp" android:layout_height="wrap_content" android:digits="0123456789"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:text="@string/fd_text_unit_ap"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/LinearLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="10dp">
            <TextView android:textStyle="bold" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fd_text_screen_off"/>
            <View android:background="#0000ff" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/fd_screen_off_r8fd_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:id="@+id/fd_text_screen_off_r8fd" android:layout_width="100dp" android:layout_height="wrap_content" android:text="@string/fd_text_r8"/>
            <EditText android:id="@+id/fd_edit_screen_off_r8fd" android:layout_width="120dp" android:layout_height="wrap_content" android:digits="0123456789."/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:text="@string/fd_text_unit"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/fd_screen_off_legacy_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:id="@+id/fd_text_screen_off_legacy" android:layout_width="100dp" android:layout_height="wrap_content" android:text="@string/fd_text_legacy"/>
            <EditText android:id="@+id/fd_edit_screen_off_legacy" android:layout_width="120dp" android:layout_height="wrap_content" android:digits="0123456789."/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:text="@string/fd_text_unit"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/fd_ap_sol_off_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <EditText android:id="@+id/fd_edit_screen_off_ap" android:layout_width="120dp" android:layout_height="wrap_content" android:digits="0123456789."/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:text="@string/fd_text_unit_ap"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/LinearLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp">
            <Button android:id="@+id/fd_btn_set" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/fd_text_set"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/LinearLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp">
            <TextView android:textStyle="bold" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fd_text_config"/>
            <View android:id="@+id/SpacerTop" android:background="#0000ff" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/LinearLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp">
            <Button android:id="@+id/fd_btn_send" android:layout_width="240dp" android:layout_height="wrap_content" android:text="@string/fd_text_send"/>
            <Button android:id="@+id/fd_btn_config" android:layout_width="240dp" android:layout_height="wrap_content" android:text="@string/fd_text_config_fd"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
