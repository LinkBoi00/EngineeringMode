<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <TextView android:layout_gravity="center" android:id="@+id/mipi_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ant_tuner_debug_mipi"/>
        <CheckBox android:id="@+id/mipi_check" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/ant_tuner_debug_mipi_check"/>
        <TableLayout android:id="@+id/TableLayout01" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" style="@style/list_content_style">
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:id="@+id/mipi_signaling" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/ant_tuner_debug_signaling" android:layout_weight="1"/>
                <Button android:id="@+id/mipi_non_signaling" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/ant_tuner_debug_non_signaling" android:layout_weight="1"/>
            </TableRow>
            <ImageView android:contentDescription="@null" style="@style/list_spiner_style"/>
            <TableRow android:id="@+id/TableRow01" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/ant_tuner_debug_mipi_port" android:layout_weight="1"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ant_tuner_debug_0x"/>
                <EditText android:id="@+id/ant_tuner_debug_mipi_port" android:background="@drawable/selector_edit_frame" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
                <EditText android:id="@+id/ant_tuner_debug_mipi_port1" android:background="@drawable/selector_edit_frame" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
                <EditText android:id="@+id/ant_tuner_debug_mipi_port2" android:background="@drawable/selector_edit_frame" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
            </TableRow>
            <ImageView android:contentDescription="@null" style="@style/list_spiner_style"/>
            <TableRow android:id="@+id/TableRow02" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/ant_tuner_debug_mipi_rw_type" android:layout_weight="1"/>
                <Spinner android:id="@+id/ant_tuner_debug_mipi_rw_type" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            </TableRow>
            <ImageView android:contentDescription="@null" style="@style/list_spiner_style"/>
            <TableRow android:id="@+id/TableRow03" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/ant_tuner_debug_mipi_usid" android:layout_weight="1"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ant_tuner_debug_0x"/>
                <EditText android:id="@+id/ant_tuner_debug_mipi_usid" android:background="@drawable/selector_edit_frame" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="1" android:layout_weight="1"/>
                <EditText android:id="@+id/ant_tuner_debug_mipi_usid1" android:background="@drawable/selector_edit_frame" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="1" android:layout_weight="1"/>
                <EditText android:id="@+id/ant_tuner_debug_mipi_usid2" android:background="@drawable/selector_edit_frame" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="1" android:layout_weight="1"/>
            </TableRow>
            <ImageView android:contentDescription="@null" style="@style/list_spiner_style"/>
            <TableRow android:id="@+id/TableRow04" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
                <TextView android:id="@+id/ant_tuner_debug_mipi_address_tv" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/ant_tuner_debug_mipi_address" android:layout_weight="1"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ant_tuner_debug_0x"/>
                <EditText android:id="@+id/ant_tuner_debug_mipi_address" android:background="@drawable/selector_edit_frame" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="2" android:layout_weight="1"/>
                <EditText android:id="@+id/ant_tuner_debug_mipi_address1" android:background="@drawable/selector_edit_frame" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="2" android:layout_weight="1"/>
                <EditText android:id="@+id/ant_tuner_debug_mipi_address2" android:background="@drawable/selector_edit_frame" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="2" android:layout_weight="1"/>
            </TableRow>
            <ImageView android:contentDescription="@null" style="@style/list_spiner_style"/>
            <TableRow android:id="@+id/TableRow05" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/ant_tuner_debug_mipi_data" android:layout_weight="1"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ant_tuner_debug_0x"/>
                <EditText android:id="@+id/ant_tuner_debug_mipi_data" android:background="@drawable/selector_edit_frame" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="2" android:layout_weight="1"/>
                <EditText android:id="@+id/ant_tuner_debug_mipi_data1" android:background="@drawable/selector_edit_frame" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="2" android:layout_weight="1"/>
                <EditText android:id="@+id/ant_tuner_debug_mipi_data2" android:background="@drawable/selector_edit_frame" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="2" android:layout_weight="1"/>
            </TableRow>
        </TableLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
            <Button android:id="@+id/ant_tuner_debug_mipi_read" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/ant_tuner_debug_mipi_read" android:layout_weight="1"/>
            <Button android:id="@+id/ant_tuner_debug_mipi_write" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/ant_tuner_debug_mipi_write" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
