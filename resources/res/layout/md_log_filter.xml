<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/md_log_filter_filter_list" android:layout_marginStart="10dp"/>
        <RadioGroup android:gravity="start" android:orientation="vertical" android:id="@+id/md_log_filter_rg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
        <Button android:id="@+id/md_log_filter_more_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/md_log_filter_more_filter"/>
        <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/md_log_filter_update_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/md_log_filter_update" android:layout_weight="1"/>
            <Button android:id="@+id/md_log_filter_restore_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/md_log_filter_restore" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
