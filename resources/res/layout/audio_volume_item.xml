<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Spinner android:id="@+id/audio_volume_scene_spinner" android:visibility="gone" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"/>
        <Spinner android:id="@+id/audio_volume_spinner1" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"/>
        <Spinner android:id="@+id/audio_volume_spinner2" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"/>
        <Spinner android:id="@+id/audio_volume_spinner3" android:visibility="gone" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/layout_text1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp">
            <TextView android:id="@+id/audio_volume_text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/audio_volume_ul_gain"/>
            <EditText android:id="@+id/audio_volume_edittext1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:inputType="number"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/layout_text2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp">
            <TextView android:id="@+id/audio_volume_text2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/audio_volume_sidetone_gain"/>
            <EditText android:id="@+id/audio_volume_edittext2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:inputType="number"/>
        </LinearLayout>
        <TextView android:id="@+id/table_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:text="@string/audio_volume_dl_gain"/>
        <TableLayout android:id="@+id/dl_table" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp"/>
        <Button android:layout_gravity="center_horizontal" android:id="@+id/btn_set" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/audio_volume_set"/>
    </LinearLayout>
</ScrollView>
