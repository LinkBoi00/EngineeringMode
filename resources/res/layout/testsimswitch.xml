<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="10dp">
        <TextView android:textSize="16sp" android:id="@+id/testsimcard" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/testsimcard"/>
        <RadioGroup android:gravity="left" android:orientation="vertical" android:id="@+id/testsimswitch_radio_group" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/simtype_default_radio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/simtype_default_radio"/>
            <RadioButton android:id="@+id/simtype_cdma_radio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/simtype_cdma_radio"/>
            <RadioButton android:id="@+id/simtype_gsm_radio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/simtype_gsm_radio"/>
        </RadioGroup>
        <Button android:id="@+id/simtype_set_button" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/simtype_set"/>
    </LinearLayout>
</LinearLayout>
