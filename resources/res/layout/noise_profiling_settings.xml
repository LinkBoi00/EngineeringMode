<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/wifi_settings" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:id="@+id/editors_holder" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:gravity="left" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/npt_delay_time"/>
                <EditText android:textSize="16sp" android:id="@+id/delay_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="50dp" android:inputType="number"/>
            </LinearLayout>
            <LinearLayout android:gravity="left" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/npt_pre_scan_time"/>
                <EditText android:textSize="16sp" android:id="@+id/npt_pre_scan_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="50dp" android:inputType="number"/>
            </LinearLayout>
            <LinearLayout android:gravity="left" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <CheckBox android:textSize="16sp" android:id="@+id/npt_ant_mode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/npt_ant_status"/>
                <EditText android:textSize="16sp" android:id="@+id/npt_ant_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="50dp" android:inputType="number"/>
            </LinearLayout>
            <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp"/>
            <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/npt_scan_mode" android:layout_weight="1"/>
                <RadioGroup android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2">
                    <RadioButton android:id="@+id/npt_scan_mode_ref" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/npt_scan_mode_ref" android:layout_weight="1"/>
                    <RadioButton android:id="@+id/npt_scan_mode_npt" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/npt_scan_mode_npt" android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout android:gravity="left" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/npt_scan_cmd_pre_ref"/>
                <EditText android:textSize="16sp" android:id="@+id/npt_scan_cmd_pre_ref" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:gravity="left" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/npt_scan_cmd_pre_npt"/>
                <EditText android:textSize="16sp" android:id="@+id/npt_scan_cmd_pre_npt" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:gravity="left" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/npt_scan_cmd_post_npt"/>
                <EditText android:textSize="16sp" android:id="@+id/npt_scan_cmd_post_npt" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
