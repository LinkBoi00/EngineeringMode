<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="10dp">
        <TextView android:textSize="16sp" android:id="@+id/iatype_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/iatype_name_text"/>
        <TextView android:textSize="16sp" android:id="@+id/iatype_apn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/iatype_apn_text"/>
        <TextView android:textSize="16sp" android:id="@+id/iatype_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/iatype_type_text"/>
        <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp"/>
        <TextView android:textSize="16sp" android:id="@+id/iatype_protocol" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/iatype_protocol_text"/>
        <RadioGroup android:gravity="left" android:orientation="vertical" android:id="@+id/iatype_radio_group" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/iatype_ip_radio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/iatype_ip"/>
            <RadioButton android:id="@+id/iatype_ipv6_radio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/iatype_ipv6"/>
            <RadioButton android:id="@+id/iatype_ipv4v6_radio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/iatype_ipv4v6"/>
        </RadioGroup>
        <Button android:id="@+id/iatype_set_button" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/iatype_set"/>
    </LinearLayout>
</LinearLayout>
