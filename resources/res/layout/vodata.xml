<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/vodata_sim1"/>
        <Button android:id="@+id/vodata_sim1_enable" android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/vodata_enable"/>
        <Button android:id="@+id/vodata_sim1_disable" android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/vodata_disable"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/vodata_sim2"/>
        <Button android:id="@+id/vodata_sim2_enable" android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/vodata_enable"/>
        <Button android:id="@+id/vodata_sim2_disable" android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/vodata_disable"/>
    </LinearLayout>
</LinearLayout>
