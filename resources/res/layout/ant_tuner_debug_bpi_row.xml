<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/bpi_binary_label" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@+id/label" android:layout_weight="2"/>
    <View android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    <EditText android:id="@+id/bpi_binary_value" android:background="@drawable/selector_edit_frame" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:inputType="number"/>
    <View android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    <Spinner android:id="@+id/bpi_binary_type" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3"/>
</LinearLayout>
