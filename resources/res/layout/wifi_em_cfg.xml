<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/wifi_em_cfg_new_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wifi_em_cfg_new" android:layout_weight="1"/>
        <Button android:id="@+id/wifi_em_cfg_get_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wifi_em_cfg_get" android:layout_weight="1"/>
        <Button android:id="@+id/wifi_em_cfg_set_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wifi_em_cfg_set" android:layout_weight="1"/>
    </LinearLayout>
    <View android:background="#ff909090" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:gravity="center_horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wifi_em_cfg_key" android:layout_weight="1"/>
        <TextView android:gravity="center_horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wifi_em_cfg_value" android:layout_weight="1"/>
        <TextView android:gravity="center_horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wifi_em_cfg_oper" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/wifi_em_cfg_item_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
