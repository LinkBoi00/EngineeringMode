<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/smart_rat_switch_feature"/>
        <Button android:id="@+id/smartratswitch_enable" android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/smart_rat_switch_enable"/>
        <Button android:id="@+id/smartratswitch_disable" android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/smart_rat_switch_disable"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/smart_rat_switch_debug"/>
        <Button android:id="@+id/smartratswitchdebug_enable" android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/smart_rat_switch_enable"/>
        <Button android:id="@+id/smartratswitchdebug_disable" android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/smart_rat_switch_disable"/>
    </LinearLayout>
</LinearLayout>
