<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/WiFi_MCR_Text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="3pt" android:layout_marginTop="10dp" android:text="@string/wifi_mcr_text"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/LinearLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/WiFi_MCR_Addr_Text" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginLeft="3pt" android:text="@string/wifi_mcr_addr_text"/>
        <EditText android:id="@+id/WiFi_MCR_Addr_Content" android:layout_width="160dp" android:layout_height="wrap_content" android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/LinearLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/WiFi_MCR_Value_Text" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginLeft="3pt" android:text="@string/wifi_mcr_value_text"/>
        <EditText android:id="@+id/WiFi_MCR_Value_Content" android:layout_width="160dp" android:layout_height="wrap_content" android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/LinearLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="3pt">
        <Button android:id="@+id/WiFi_MCR_ReadBtn" android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/wifi_mcr_readbtn"/>
        <Button android:id="@+id/WiFi_MCR_WriteBtn" android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/wifi_mcr_writebtn"/>
    </LinearLayout>
</LinearLayout>
