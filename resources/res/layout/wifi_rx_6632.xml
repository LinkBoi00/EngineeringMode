<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <CheckBox android:id="@+id/wifi_wfx_0" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wifi_wf0_text" android:layout_weight="1"/>
            <CheckBox android:id="@+id/wifi_wfx_1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wifi_wf1_text" android:layout_weight="1"/>
        </LinearLayout>
        <CheckBox android:id="@+id/wifi_duplicate_mode_rx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wifi_dup_mode_text"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/wifi_ant_vg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
            <TextView android:layout_gravity="center_vertical" android:layout_width="80dp" android:layout_height="wrap_content" android:text="@string/wifi_ant_swap"/>
            <RadioGroup android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:id="@+id/wifi_rx_ant_main" android:layout_width="0dp" android:layout_height="wrap_content" android:checked="true" android:text="@string/wifi_ant_main" android:layout_weight="1"/>
                <RadioButton android:id="@+id/wifi_rx_ant_aux" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wifi_ant_aux" android:layout_weight="1"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:paddingTop="10dp" android:layout_width="80dp" android:layout_height="wrap_content" android:text="@string/wifi_bandwidth"/>
            <Spinner android:id="@+id/wifi_bandwidth_spinner" android:layout_width="230dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:id="@+id/wifi_bandwidth_dbw_tv" android:paddingTop="10dp" android:layout_width="80dp" android:layout_height="wrap_content" android:text="@string/wifi_dbw"/>
            <Spinner android:id="@+id/wifi_bandwidth_dbw_spn" android:layout_width="230dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:id="@+id/wifi_bandwidth_prim_ch_tv" android:paddingTop="10dp" android:layout_width="80dp" android:layout_height="wrap_content" android:text="@string/wifi_bw_advanced_prim_ch"/>
            <Spinner android:id="@+id/wifi_bandwidth_prim_ch_spn" android:layout_width="230dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:paddingTop="10dp" android:layout_width="80dp" android:layout_height="wrap_content" android:text="@string/wifi_rx0_channel_text"/>
            <Spinner android:id="@+id/wifi_rx0_channel_spinner" android:layout_width="230dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/wifi_rx1_channel_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:paddingTop="10dp" android:layout_width="80dp" android:layout_height="wrap_content" android:text="@string/wifi_rx1_channel_text"/>
            <Spinner android:id="@+id/wifi_rx1_channel_spinner" android:layout_width="230dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/LinearLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp">
            <TextView android:id="@+id/WiFi_FCS_Text" android:layout_width="70dp" android:layout_height="25dp" android:text="@string/wifi_fcs_text"/>
            <TextView android:id="@+id/WiFi_FCS_Content" android:layout_width="250dp" android:layout_height="25dp" android:text="@string/wifi_fcs_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:id="@+id/WiFi_Rx_Text" android:layout_width="70dp" android:layout_height="25dp" android:text="@string/wifi_rx_text"/>
            <TextView android:id="@+id/WiFi_Rx_Content" android:layout_width="250dp" android:layout_height="25dp" android:text="@string/wifi_rx_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:id="@+id/WiFi_PER_Text" android:layout_width="70dp" android:layout_height="25dp" android:text="@string/wifi_per_text"/>
            <TextView android:id="@+id/WiFi_PER_Content" android:layout_width="250dp" android:layout_height="25dp" android:text="@string/wifi_per_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:id="@+id/WiFi0_RX_RSSI_Text" android:layout_width="80dp" android:layout_height="25dp" android:text="@string/WiFi0_RX_RSSI"/>
            <TextView android:id="@+id/WiFi0_RX_RSSI_Content" android:layout_width="200dp" android:layout_height="25dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView android:id="@+id/WiFi1_RX_RSSI_Text" android:layout_width="80dp" android:layout_height="25dp" android:text="@string/WiFi1_RX_RSSI"/>
            <TextView android:id="@+id/WiFi1_RX_RSSI_Content" android:layout_width="200dp" android:layout_height="25dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="60dp">
            <Button android:id="@+id/WiFi_Go_Rx" android:layout_width="130dp" android:layout_height="wrap_content" android:text="@string/wifi_go"/>
            <Button android:id="@+id/WiFi_Stop_Rx" android:layout_width="130dp" android:layout_height="wrap_content" android:text="@string/wifi_stop"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
