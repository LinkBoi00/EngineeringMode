<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/bt_power_sel" android:layout_weight="1" android:layout_marginStart="10dp"/>
        <RadioGroup android:orientation="horizontal" android:id="@+id/bt_power_rg" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2">
            <RadioButton android:id="@+id/bt_power_default_rb" android:layout_width="0dp" android:layout_height="wrap_content" android:checked="true" android:text="@string/bt_power_default" android:layout_weight="1"/>
            <RadioButton android:id="@+id/bt_power_cus_rb" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/bt_power_cus" android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/bt_power_level_ll" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/bt_power_level_select" android:layout_weight="1"/>
        <Spinner android:entries="@array/bt_power_level" android:id="@+id/bt_power_level_sp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
